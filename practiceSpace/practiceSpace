#include <iostream>
#include <string>

struct Container
{
    std::string text{};
    int num{};
    double deci{};
};

int main()
{
    Container box[3]{};
    
    box[0].text = {"Hello, World!"};
    box[1].num = {50};
    box[2].deci = {2.4};
    
    std::cout << box[0].text << ' ' << box[1].num << ' ' << box[2].deci << '\n';
    
    return 0;
}
